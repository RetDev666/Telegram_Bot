# Основні налаштування бота
BOT_TOKEN=your_bot_token_here
ADMIN_CHAT_ID=your_admin_chat_id
GROUP_CHAT_ID=your_group_chat_id
ADMIN_USER_IDS=admin_id1,admin_id2

# База даних
# Локально (SQLite)
DATABASE_URL=sqlite:///tiktok_stats.db
# Heroku (PostgreSQL) - автоматично встановлюється
# DATABASE_URL=postgresql://user:password@host:port/database

# OCR налаштування
# Локально (macOS/Linux)
TESSERACT_PATH=/usr/local/bin/tesseract
# Heroku
# TESSERACT_PATH=/app/.apt/usr/bin/tesseract
# Docker
# TESSERACT_PATH=/usr/bin/tesseract

# Порт для веб-сервера
PORT=8000

# Додаткові налаштування (опціонально)
# RATE_LIMIT_MESSAGES=5
# RATE_LIMIT_PERIOD=60
# MAX_FILE_SIZE=10485760 